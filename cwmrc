fontname "iosevka:size=12:bold"
gap 50 10 10 10 
borderwidth 10
command term "/usr/X11R6/bin/xterm -l"

unbind-key all
bind-key S4-ampersand menu-exec
bind-key S4-Return term
bind-key 4-q lock
bind-key 4-Return window-hide
bind-key 4-Down window-lower
bind-key 4-Up window-raise
bind-key 4-slash menu-window
bind-key C4-l window-menu-label
bind-key 4-x window-close
bind-key 4-Right window-cycle-ingroup
bind-key 4-Left window-rcycle-ingroup
bind-key C4S-f window-freeze
bind-key C4-s window-stick
bind-key C4-f window-fullscreen

# Changing window managing
bind-key 4-a group-toggle-all
bind-key S4-m window-maximize
bind-key C4-equal window-vtile # vtile instead of vmaximize
bind-key C4S-equal window-htile # htile instead of hmaximize
bind-key S4-g window-group

## Move windows across groups with 
### CM-[n]
bind-key 4-1 group-toggle-1
bind-key 4-2 group-toggle-2
bind-key 4-3 group-toggle-3
bind-key 4-4 group-toggle-4
bind-key 4-5 group-toggle-5
bind-key 4-6 group-toggle-6
bind-key 4-7 group-toggle-7
bind-key 4-8 group-toggle-8
bind-key 4-9 group-toggle-9

# neio instead of hjkl

bind-key 4-n window-move-left
bind-key 4-e window-move-down
bind-key 4-i window-move-up
bind-key 4-o window-move-right


bind-key 4S-n window-move-left-big
bind-key 4S-e window-move-down-big
bind-key 4S-i window-move-up-big
bind-key 4S-o window-move-right-big


bind-key 4C-n window-resize-left
bind-key 4C-e window-resize-down
bind-key 4C-i window-resize-up
bind-key 4C-o window-resize-right


bind-key 4SC-n window-resize-left-big  
bind-key 4SC-e window-resize-down-big  
bind-key 4SC-i window-resize-up-big    
bind-key 4SC-o window-resize-right-big 
                                       
bind-key C4-w menu-exec-wm
